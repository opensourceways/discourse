{{#if this.showUnreadIndicator}}
  <div
    class={{concat-class
      "chat-channel-unread-indicator"
      (if this.isUrgent "-urgent")
    }}
  >
    <div class="chat-channel-unread-indicator__number">{{#if
        this.showUnreadCount
      }}{{this.unreadCount}}{{else}}&nbsp;{{/if}}</div>
  </div>
{{/if}}